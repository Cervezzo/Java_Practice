public class Main {

    public static final int SIZE = 5;

    public static void drawPlus (){
        for (int i = 1; i < 3 ; i++) {
            System.out.print("+");
            for (int j = 1; j<=SIZE ; j++) {
                System.out.print("=");
            }
        }
        System.out.print("+");
        System.out.println();
    }

    public static void drawBars (){
        for (int i = 1; i <3 ; i++) {
            System.out.print("|");
            for (int j = 1; j<=SIZE ; j++) {
                System.out.print(" ");
            }
        }
        System.out.print("|");
        System.out.println();
    }

    public static void main(String[] args) {
        drawPlus();
        for (int i = 1; i <=SIZE ; i++) {
            drawBars();
        }
        drawPlus();
        for (int i = 1; i <=SIZE ; i++) {
            drawBars();
        }
        drawPlus();
    }
}
